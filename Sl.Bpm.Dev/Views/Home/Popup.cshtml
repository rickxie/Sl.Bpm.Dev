
@{
    ViewBag.Title = "Popup";
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
    ViewBag.hasSubMenu = false;
}


<div ng-controller="popup" style="margin:0 auto;"><modal size="md">
        <modal-header>{{title}}</modal-header>
        <modal-body>
            <div class="modal-body" style="height:calc(100vh - 250px);overflow-y:auto;">
                <div id="popupMenu" style="width:100%;"></div>
            </div>
        </modal-body>
        <modal-footer>
        </modal-footer>
    </modal>
</div>

<script type="text/javascript">
    function loadModule() {
        angular.module("syspages").controller("popup", ['$scope', '$location', function ($scope, $location) {
            $scope.type = +$location.search()["type"];
            $scope.code = $location.search()["code"];
          
        }]).config(function ($locationProvider) {
            $locationProvider.html5Mode(true);
        });;
    }
</script>

