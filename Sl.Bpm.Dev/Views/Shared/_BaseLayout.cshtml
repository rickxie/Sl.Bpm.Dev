
@{
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="app">
<head>
    <base href="@(((System.Web.HttpRequestWrapper)this.Request).ApplicationPath)" />
    @RenderSection("head", false)
    <script>
        window.appPath = "@(((System.Web.HttpRequestWrapper)this.Request).ApplicationPath)";
    </script>
</head>
<body>
    @RenderBody()
    @RenderSection("foot", false)
</body>
</html>
<script>
    document.addEventListener("error", function (e) {
        var elem = e.target;
        console.log(elem);
        if (elem.tagName.toLowerCase() === 'img') {
            var err = $(elem).attr("erred");
            if (err == 1) { return; }
            elem.src = window.appPath+ $(elem).attr("src");
            $(elem).attr("erred","1");
        }
    }, true);
